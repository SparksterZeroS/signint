{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "umd",
    "target": "es5",
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
  },
}
